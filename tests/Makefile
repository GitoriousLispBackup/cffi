OSTYPE = $(shell uname)

ifeq ($(OSTYPE), Darwin)
CC                := gcc
CFLAGS            := -lm -Wall -ansi -pedantic
SHLIB_CFLAGS      := -bundle
SHLIB_EXT         := .so
else
ifeq ($(OSTYPE), Linux)
CC                := gcc
CFLAGS            := -lm -Wall -ansi -pedantic
SHLIB_CFLAGS      := -shared
SHLIB_EXT         := .so
else
# Let's assume this is win32
CC                := gcc
CFLAGS            := -lm -Wall -ansi -pedantic
SHLIB_CFLAGS      := -shared
SHLIB_EXT         := .dll 
endif
endif

ARCH = $(shell uname -m)

ifeq ($(ARCH), x86_64)
CFLAGS += -fPIC
endif

# Are all G5s ppc970s?
ifeq ($(ARCH), ppc970)
CFLAGS += -m64
endif

all: shlibs

shlibs: libtest$(SHLIB_EXT)

%$(SHLIB_EXT): %.c
	$(CC) -o $@ $(SHLIB_CFLAGS) $(CFLAGS) $<

clean:
	rm -f *.so *.dylib *.dll *.bundle

